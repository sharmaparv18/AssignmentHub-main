<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.hellosagar.assigmenthub">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="dev.sagar.assigmenthub.AssignmentHubApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="dev.sagar.assigmenthub.DetailAssignmentActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="dev.sagar.assigmenthub.AddStudentActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="dev.sagar.assigmenthub.AddAssignmentActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="dev.sagar.assigmenthub.AuthActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Splash"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="dev.sagar.assigmenthub.HomeActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>